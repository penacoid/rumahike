<?xml version="1.0"?>

<config>
  <modules>
    <Pena_Sample>
      <version>0.1.0</version>
    </Pena_Sample>
  </modules>
  <admin>
      <fieldsets>
          <customer_dataflow>
              <village><billing>1</billing><shipping>1</shipping></village>
          </customer_dataflow>
      </fieldsets>
  </admin>
  <global>
    <resources>
      <pena_sample_setup>
        <setup>
          <module>Pena_Sample</module>
          <class>Mage_Customer_Model_Entity_Setup</class>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </pena_sample_setup>
    </resources>
    <fieldsets>
        <sales_copy_order_billing_address>
            <village><to_order>*</to_order></village>
        </sales_copy_order_billing_address>
        <sales_copy_order_shipping_address>
            <village><to_order>*</to_order></village>
        </sales_copy_order_shipping_address>
        <sales_convert_quote_address>
            <village><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></village>
        </sales_convert_quote_address>
        <sales_convert_order_address>
            <village><to_quote_address>*</to_quote_address></village>
        </sales_convert_order_address>
        <customer_address>
             <village><to_quote_address>*</to_quote_address></village>
        </customer_address>
        <checkout_onepage_billing>
            <village><to_customer>*</to_customer></village>
        </checkout_onepage_billing>
    </fieldsets>
  </global>
</config>